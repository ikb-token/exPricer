# Website configuration
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-domain.com/path
APP_TIMEZONE=UTC

# Email configuration
# The email address that appears in the "From" field of sent emails
MAIL_FROM=me@yourdomain.com
# The email address that users should reply to for purchase support; can be the same as above
MAIL_REPLY_TO=support@yourdomain.com

# SMTP - Email sending server configuration
# The hostname of your SMTP server (e.g., smtp.gmail.com, smtp.mailgun.org)
MAIL_SMTP_HOST=smtp.yourdomain.com
# The port your SMTP server uses (common ports: 25, 465 for SSL, 587 for TLS)
MAIL_SMTP_PORT=465
# Your SMTP server authentication username (typically your email address with the provider)
MAIL_SMTP_USERNAME=your_smtp_username
# Your SMTP server authentication password
MAIL_SMTP_PASSWORD=your_smtp_password

# Stripe configuration
STRIPE_SECRET_KEY=sk_your_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_your_publishable_key_here

# Product configuration
PRODUCT_NAME="Your Digital Work Name"
PRODUCT_DESCRIPTION="Description of your work" # can contain HTML tags
PRODUCT_IMAGE=http://someplace.org/photo_of_work.jpg # optional
PRODUCT_FILE_NAME=digital_work_file.flac
PRODUCT_FILE_SIZE="24.5 MB" # can be an estimate, just for display to the buyer

# Collection details
# MAX_COPIES is the maximum number of copies you wish to sell, e.g. a limited run of 100
MAX_COPIES=100
# MIN_PRICE is in US dollars. The algorithm may sell the item for a higher price, but never lower than this.
MIN_PRICE=100
# WORK_TYPE can be set to digital or physical. A digital work enables the buyer to download it after purchase.
WORK_TYPE=digital

# Download configuration
DOWNLOAD_TOKEN_SECRET=generate_a_random_string_here_that_is_at_least_32_characters_long
DOWNLOAD_EXPIRY_HOURS=24